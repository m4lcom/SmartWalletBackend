{
  "ConnectionStrings": {
    "DefaultConnection": "${DB_PATH}"
  },
  "Jwt": {
    "Key": "${JWT_ST}",
    "Issuer": "SmartWalletAPI",
    "Audience": "SmartWalletClient",
    "ExpireMinutes": 60
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "AllowedHosts": "*",
  "Environment": {
    "Name": "Development",
    "UseEnvFile": true,
    "EnvFilePath": ".env"
  },

  "SmartWallet": {
    "EnableDocs": true,
    "DocsPath": "docs/",
    "ChangelogPath": "docs/changelog.md"
  },

  "Swagger": {
    "Enabled": true,
    "Title": "SmartWallet API",
    "Version": "v1"
  },

  "Features": {
    "EnableEmailNotifications": false,
    "EnableAuditTrail": true
  }
}
