{
  "App": {
    "Name": "SmartWallet",
    "Environment": "Development",
    "BaseUrl": "https://localhost:5001"
  },
  "Database": {
    "Provider": "SQLite",
    "ConnectionString": "Data Source=smartwallet.db"
  },
  "Jwt": {
    "Issuer": "SmartWallet",
    "Audience": "SmartWalletUsers",
    "ExpiryMinutes": 60
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Swagger": {
    "Enabled": true,
    "Title": "SmartWallet API",
    "Version": "v1"
  },
  "Features": {
    "EnableEmailNotifications": false,
    "EnableAuditTrail": true
  }
}